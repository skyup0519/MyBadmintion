<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu2"
    >
    <RelativeLayout
        android:id="@+id/badminton_sport_center_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/drawer_contant_view"></include>
    </RelativeLayout>


    <include layout="@layout/layout_drawers_god"></include>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/badminton_sport_center_views"
        android:orientation="vertical"
        android:id="@+id/badminton_sport_center_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recyclerViews"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>
